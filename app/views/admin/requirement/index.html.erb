<div class="container my-4">
  <div class="row justify-content-center my-4">
    <div class="col-10">
      <form>
        <div class="input-group" method="get" action="/admin/requirement">
          <input class="form-control" placeholder="search by name user" name="[q][user_name_cont]">
          <div class="input-group-prepend">
            <button class="btn btn-primary">Search</button>
          </div>
        </div>      
      </form>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col" class="table-sort">
          <%= sort_link @q, :user_name do %>
            <%= t ".name" %>
          <% end %>
        </th>
        <th scope="col" class="table-sort">
          <%= sort_link @q, :user_email do %>
            <%= t ".email" %>
          <% end %>
        </th>
        <th scope="col" class="table-sort">
          <%= sort_link @q, :start_date do %>
            <%= t ".start" %>
          <% end %>
        </th>
        <th scope="col" class="table-sort">
          <%= sort_link @q, :end_date do %>
            <%= t ".end" %>
          <% end %>
        </th>
        <th scope="col" class="table-sort">
          <%= sort_link @q, :status do %>
            <%= t ".status" %>
          <% end %>
        </th>
        <th scope="col" colspan="2">
          <%= t ".action" %>
        </th>
      </tr>
    </thead>
    <tbody id="listborrow">
      <%= render partial: "admin/requirement/borrow", collection: @borrows %>
    </tbody>
  </table>
  <div id="listPage">
    <%= paginate(@borrows, theme: "twitter-bootstrap-4",
      pagination_class: "pagination-md float-right", remote: true) %>
  </div>
</div>
