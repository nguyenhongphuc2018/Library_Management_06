<%= form_with url: book_comments_path(@book.id), method: :post, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.text_area "comment[content]", size: "10x5", class: "form-control " %>
  </div>
  <div class="form-group">
    <div class="text-right">
      <%= f.submit t(".send"), class: "btn btn-md btn-primary "%>
    </div>
  </div>         
<% end %>
