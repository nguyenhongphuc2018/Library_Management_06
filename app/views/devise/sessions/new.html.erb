<div class="bg-login">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-5">
      <div class="card box-devise ">
        <div class="card-body">
          <p class="center h1"><%= t(".sign_in", default: "Sign in") %></p>
          <div>
            <%= render("layouts/messages") %>
          </div>
          <div class="text-center">
            <%= link_to user_facebook_omniauth_authorize_path do %>
              <i class="fa fa-facebook-official fa-3x"></i>
            <% end %>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check form-group">
                <%= f.label :remember_me, class: "form-check-label" do %>
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= t("activerecord.attributes.user.remember_me", default: "Remember me") %>
                <% end %>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.submit  t(".sign_in", default: "Sign in"), class: "btn btn-primary form-control" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
